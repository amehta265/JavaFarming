<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!--
This is where all the layout nodes for the Welcome Screen should be added (below children)
open all layout components with <layout name> and after implementation close them with </layoutname>
-->

<AnchorPane prefHeight="800.0" prefWidth="800.0" styleClass="welcomeImage" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameOverController">
   <children>
        <HBox alignment="CENTER" layoutX="339.0" layoutY="761.0" spacing="10" translateX="-10.0" translateY="-60.0">
            <Button fx:id="newGame" mnemonicParsing="false" onAction="#newGame" prefHeight="47.0" prefWidth="110.0" text="Play Again?" textFill="#0a723b">
            <font>
               <Font name="Bodoni 72 Smallcaps Book" size="18.0" />
            </font></Button>
            <Button fx:id="exit" mnemonicParsing="false" onAction="#exit" prefHeight="45.0" prefWidth="94.0" text="Exit" textFill="#bc0a0a">
            <font>
               <Font name="Bodoni 72 Smallcaps Book" size="23.0" />
            </font></Button>
        </HBox>
        <Label layoutX="312.0" layoutY="250.0" style="-fx-font-size: 32; -fx-text-fill: darkblue" text="GAME OVER" />
   </children>
</AnchorPane>
